<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/deep_navy_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Movie Poster -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/avtar"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/avtar"
                android:contentDescription="@string/movie_poster_desc" />


            <!-- Back Button -->
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:src="@drawable/back"
                android:layout_margin="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:tint="@android:color/white"
                android:contentDescription="@string/back_button_desc"
                android:scaleType="fitCenter" />



            <ImageButton
                android:id="@+id/favorite_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/favourite"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:contentDescription="@string/favorite_button"
                android:elevation="10dp"/>




            <!-- Movie Title & Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:padding="12dp"
                android:background="@android:color/black"
                android:alpha="0.7">

                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Avatar_the_way_to_water"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/movie_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_8_3"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Genres -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Dram"
                android:background="@drawable/genre_bg"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/crim"
                android:background="@drawable/genre_bg"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/act"
                android:background="@drawable/genre_bg"
                android:textColor="@android:color/white"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Summary -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sum"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingTop="12dp"/>

        <TextView
            android:id="@+id/movie_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/more_than_a_decade_after_the_events_of_the_first_avatar_jake_sully_now_lives_with_his_family_among_the_na_vi_on_pandora_when_an_old_enemy_the_rda_resources_development_administration_returns_to_exploit_the_planet_jake_and_neytiri_must_protect_their_home_to_escape_the_growing_threat_they_seek_refuge_with_the_metkayina_a_water_dwelling_na_vi_clan_as_they_adapt_to_their_new_environment_they_face_challenges_forge_new_bonds_and_prepare_for_an_epic_battle_to_defend_pandora_once_again"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingTop="4dp"/>

        <!-- Cast -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/actor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingTop="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_bg"
                android:scaleType="centerCrop"
                android:src="@drawable/actor1"
                android:contentDescription="@string/favorite_button_desc"/>

            <ImageView
                android:layout_width="85dp"
                android:layout_height="101dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_bg"
                android:scaleType="centerCrop"
                android:src="@drawable/actor2"
                android:contentDescription="@string/favorite_button_desc"/>

            <ImageView
                android:layout_width="81dp"
                android:layout_height="105dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_bg"
                android:scaleType="centerCrop"
                android:src="@drawable/actor3"
                android:contentDescription="@string/favorite_button_desc"/>

        </LinearLayout>
        <!-- Watch Now Button -->

        <Button
            android:id="@+id/watch_now_button"
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/genre_bg"
            android:padding="10dp"
            android:text="@string/watch"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sharebutton"
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/genre_bg"
            android:padding="10dp"
            android:text="@string/share_with_friends"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
