<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/deep_navy_blue">

    <TextView

        android:id="@+id/download_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="163dp"
        android:text="@string/download"
        android:textColor="@color/pink"
        android:textSize="20sp"
        android:textStyle="bold" />



    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/download_title"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">



        <TextView

            android:id="@+id/downloaded_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/downloaded"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />



        <TextView

            android:id="@+id/downloading_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/downloading"
            android:textColor="#808080"
            android:textSize="16sp"
            android:textStyle="bold" />





    </LinearLayout>



    <View

        android:id="@+id/tab_indicator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_below="@id/tab_layout"
        android:background="#FF0000" />



    <RelativeLayout

        android:id="@+id/movie_item_1"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_below="@id/tab_indicator"

        android:layout_marginTop="46dp"

        android:background="#262626"

        android:padding="10dp">



        <ImageView

            android:id="@+id/movie_image_1"

            android:layout_width="80dp"

            android:layout_height="120dp"

            android:src="@drawable/captain"

            android:contentDescription="@string/movie_1"/>



        <TextView

            android:id="@+id/movie_title_1"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"

            android:layout_toEndOf="@id/movie_image_1"

            android:text="@string/captain_america_the_winter_soldier"

            android:textColor="#FFFFFF"

            android:textSize="16sp"

            android:textStyle="bold" />



        <TextView

            android:id="@+id/movie_genre_1"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@id/movie_title_1"

            android:layout_marginStart="10dp"

            android:layout_toEndOf="@id/movie_image_1"

            android:text="@string/action_adventure"

            android:textColor="#FFFFFF"

            android:textSize="14sp" />



        <TextView

            android:id="@+id/movie_details_1"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@id/movie_genre_1"

            android:layout_marginStart="10dp"

            android:layout_toEndOf="@id/movie_image_1"

            android:text="@string/_206_32_1206"

            android:textColor="#FFFFFF"

            android:textSize="14sp" />



    </RelativeLayout>



    <RelativeLayout

        android:id="@+id/movie_item_2"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_below="@id/movie_item_1"

        android:layout_marginTop="4dp"

        android:background="#262626"

        android:padding="10dp">



        <ImageView

            android:id="@+id/movie_image_2"

            android:layout_width="80dp"

            android:layout_height="120dp"

            android:src="@drawable/marvel"

            android:contentDescription="@string/movie_1"/>



        <TextView

            android:id="@+id/movie_title_2"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"

            android:layout_toEndOf="@id/movie_image_2"

            android:text="@string/captain_marvel"

            android:textColor="#FFFFFF"

            android:textSize="16sp"

            android:textStyle="bold" />



        <TextView

            android:id="@+id/movie_genre_2"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@id/movie_title_2"

            android:layout_marginStart="10dp"

            android:layout_toEndOf="@id/movie_image_2"

            android:text="@string/action_adventure2"

            android:textColor="#FFFFFF"

            android:textSize="14sp" />



        <TextView

            android:id="@+id/movie_details_2"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@id/movie_genre_2"

            android:layout_marginStart="10dp"

            android:layout_toEndOf="@id/movie_image_2"

            android:text="@string/_206_32_12062"

            android:textColor="#FFFFFF"

            android:textSize="14sp" />

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="421dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-3dp"
        android:background="@color/gray"
        app:backgroundTint="#4B4949"
        app:menu="@menu/bottom_navigation_menu" />


</RelativeLayout>