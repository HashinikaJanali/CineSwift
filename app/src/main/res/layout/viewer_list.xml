<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181A20"
    android:orientation="vertical">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/arrow"
        android:contentDescription="@string/back"
        android:rotation="0" />

    <!-- 🎬 Video Player Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/sharewatch">

        <TextView
            android:id="@+id/timeIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_01_28_00_02_28_00"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"/>
    </RelativeLayout>

    <!-- 👥 Viewer List Pop-up -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 🔝 Title & Close Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/viewer_6"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </LinearLayout>

        <!-- 👤 Viewer Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingTop="12dp">

            <!-- 🔹 Viewer Items -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="12dp"
                android:background="@drawable/rounded_gray_button">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/p1"
                    android:contentDescription="@string/profile_picture"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/you"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="12dp"
                android:background="@drawable/rounded_gray_button">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/p2"
                    android:contentDescription="@string/profile_picture2"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/samantha_zein"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="12dp"
                android:background="@drawable/rounded_gray_button">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/p3"
                    android:contentDescription="@string/profile_picture3"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alexis_sancho"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="12dp"
                android:background="@drawable/rounded_gray_button">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/p4"
                    android:contentDescription="@string/profile_picture4"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eva_angelina"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="12dp"
                android:background="@drawable/rounded_gray_button">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/p5"
                    android:contentDescription="@string/profile_picture5"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/robert_fox"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="12dp"
                android:background="@drawable/rounded_gray_button">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/p6"
                    android:contentDescription="@string/profile_picture6"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jane_cooper"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

        </GridLayout>
    </LinearLayout>

</LinearLayout>
